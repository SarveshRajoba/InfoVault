<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">
        <i class="bi bi-lightning-charge-fill"></i>
      </div>
      <h3 class="auth-title">Create Account</h3>
      <p class="auth-subtitle">Join InfoVault to start learning smarter</p>
    </div>

    <%= form_with(model: @user, url: signup_path, class: "needs-validation", novalidate: true) do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger mb-4">
          <ul class="mb-0 ps-3">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :username, class: "form-label" %>
        <%= f.text_field :username, class: "form-control", required: true, placeholder: "Choose a username" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true, placeholder: "name@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true, placeholder: "Create a password" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Repeat password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Create Account", class: "btn btn-primary py-2" %>
      </div>
    <% end %>

    <div class="auth-footer">
      Already have an account? <%= link_to "Sign in", login_path %>
    </div>
  </div>
</div>
