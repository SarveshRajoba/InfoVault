<!-- Reuse this CSS and link (keep only once in layout or shared partial) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
  body {
    min-height: 100vh;
    margin: 0;
    font-family: 'Segoe UI', Arial, sans-serif;
    position: relative;
    overflow: hidden;
  }
  body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: url('<%= asset_path("bg-login.jpg") %>') center/cover no-repeat;
    filter: blur(2px) brightness(0.92) contrast(1.04);
    z-index: 0;
    pointer-events: none;
  }
  .auth-outer {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 1;
  }
  .auth-wrapper {
    background: rgba(28,31,44,0.74);
    box-shadow: 0 8px 36px 0 rgba(19,24,50,0.21);
    border-radius: 1.3rem;
    backdrop-filter: blur(6px);
    border: 1.1px solid rgba(255,255,255,0.09);
    max-width: 420px;
    width: 100%;
    padding: 2.4rem 2rem 2rem 2rem;
    z-index: 2;
  }
  .auth-title {
    font-size: 2.1rem;
    color: #fff;
    letter-spacing: 0.03em;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.3rem;
  }
  .auth-subtext {
    color: #d7d8df;
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.04rem;
  }
  .form-label {
    color: #fff;
    font-weight: 500;
  }
  .form-control {
    background: rgba(255,255,255,0.09);
    border-radius: 0.65rem;
    border: 1px solid #3d4155;
    color: #fff;
    font-size: 1.09em;
  }
  .form-control:focus {
    border-color: #8ecfff;
    background: rgba(255,255,255,0.15);
    color: #fff;
  }
  .input-group-text {
    background: rgba(28,36,54,0.77);
    color: #c8d3ee;
    border-radius: 0.65rem 0 0 0.65rem;
    border: none;
  }
  .btn-primary {
    background: linear-gradient(98deg,#2844b3 20%,#174685 85%);
    border: none;
    border-radius: 0.7rem;
    font-weight: 600;
    font-size: 1.08em;
    margin-top:0.55rem;
    letter-spacing: 0.03em;
  }
  .btn-primary:hover, .btn-primary:focus {
    background: linear-gradient(99deg,#123159 20%,#2457b8 89%);
  }
  .auth-link {
    color: #8ecfff !important;
    text-decoration: none;
    font-weight: 500;
  }
  .auth-link:hover { text-decoration: underline;}
  .alert-danger { font-size:0.98em;}
</style>
<div class="auth-outer">
  <div class="auth-wrapper">
    <h3 class="auth-title">Create Account</h3>
    <p class="auth-subtext">Sign up to get started</p>

    <%= form_with(model: @user, url: signup_path, class: "needs-validation", novalidate: true) do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :username, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-person"></i></span>
          <%= f.text_field :username, class: "form-control", required: true, placeholder: "Username" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-envelope"></i></span>
          <%= f.email_field :email, class: "form-control", required: true, placeholder: "Email" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-lock"></i></span>
          <%= f.password_field :password, class: "form-control", required: true, placeholder: "Password" %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-shield-check"></i></span>
          <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Repeat password" %>
        </div>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <p class="auth-subtext">
        Already have an account?
        <%= link_to "Log in", login_path, class: "auth-link" %>
      </p>
    </div>
  </div>
</div>
