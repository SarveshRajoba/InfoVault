<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="subject-title mb-0"><%= @paragraph.title %></h2>
    <%= link_to "Back to Topics", subject_chapter_paragraphs_path(@chapter.subject, @chapter), class: "btn btn-secondary", data: { turbo: false } %>
  </div>

  <% fixed_paragraph_color = "hsl(226, 48%, 84%)" %>
  <div class="card mb-5 p-4 shadow-sm border-0" style="background-color: <%= fixed_paragraph_color %>; border-radius: 12px;">
    <div class="card-body">
      <h5 class="card-title text-dark mb-3">Content</h5>
      <div class="card-text text-dark" style="font-size: 1.05rem; line-height: 1.7;"><%= raw @paragraph.content %></div>
    </div>
  </div>

  <h3 class="mb-4 fw-bold text-dark">Flashcards</h3>
  <% if @paragraph.questions.any? %>
    <div class="row">
      <% @paragraph.questions.each do |question| %>
        <% random_light_color = "hsl(#{rand(360)}, #{rand(30..70)}%, #{rand(80..95)}%)" %>
        <div class="col-md-4 mb-4">
          <div class="question-card" data-question-id="<%= question.id %>" data-answers='<%= question.answers.map(&:answer).to_json %>' style="background-color: <%= random_light_color %>;">
            <div class="card-content">
              <h5 class="card-title mb-2 text-dark"><%= question.question.html_safe %></h5>
              <p class="card-text-hint text-muted">Click to reveal answer</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5 bg-white rounded border" style="border-color: #e2e8f0;">
      <i class="bi bi-card-text fs-1 text-muted mb-3"></i>
      <p class="lead text-muted">No flashcards generated yet.</p>
    </div>
  <% end %>

  <div id="overlay" class="modal-overlay"></div>
  <div id="flipped-card-container" class="modal-card-container"></div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const questionCards = document.querySelectorAll(".question-card");
    const overlay = document.getElementById("overlay");
    const flippedCardContainer = document.getElementById("flipped-card-container");

    questionCards.forEach(card => {
      card.addEventListener("click", function () {
        const questionId = this.dataset.questionId;
        const questionText = this.querySelector('.card-title').textContent;
        const backgroundColor = this.style.backgroundColor;
        
        // Logic to find answers for the specific question
        let answerHtml = '<p class="text-muted">No answers available</p>';
        <% @paragraph.questions.each do |question| %>
          if (questionId === "<%= question.id %>") {
            answerHtml = `
              <% if question.answers.any? %>
                <ul class="list-unstyled mb-0 text-dark">
                  <% question.answers.each do |answer| %>
                    <li class="mb-2">
                      <%= escape_javascript(sanitize(answer.answer))%>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No answers available</p>
              <% end %>
            `;
          }
        <% end %>
        
        const flipCardHtml = `
          <div class="flip-card">
            <div class="flip-card-inner">
              <div class="flip-card-front" style="background-color: ${backgroundColor}">
                <div class="card-content">
                  <h5 class="card-title px-3 text-dark">${questionText}</h5>
                  <p class="card-text-hint text-muted">Click to see answer</p>
                </div>
              </div>
              <div class="flip-card-back" style="background-color: ${backgroundColor}">
                <div class="card-content">
                  ${answerHtml}
                </div>
              </div>
            </div>
          </div>
        `;
        flippedCardContainer.innerHTML = flipCardHtml;
        
        overlay.style.display = "block";
        flippedCardContainer.style.display = "flex";
        document.body.style.overflow = "hidden";
        
        const modalFlipCard = flippedCardContainer.querySelector('.flip-card');
        modalFlipCard.addEventListener("click", function(e) {
          e.stopPropagation();
          const inner = this.querySelector('.flip-card-inner');
          if (inner.style.transform === 'rotateY(180deg)') {
            inner.style.transform = 'rotateY(0deg)';
          } else {
            inner.style.transform = 'rotateY(180deg)';
          }
        });

        overlay.addEventListener("click", closeFlippedCard);
      });
    });

    function closeFlippedCard() {
      overlay.style.display = "none";
      flippedCardContainer.style.display = "none";
      document.body.style.overflow = "auto";
    }
  });
</script>